{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Domain Manifest Schema",
  "type": "object",
  "required": [
    "domainVersion",
    "domainKey",
    "facetId",
    "questionSet",
    "sources"
  ],
  "properties": {
    "domainVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "domainKey": {
      "type": "string",
      "enum": [
        "qian",
        "kun",
        "zhen",
        "xun",
        "kan",
        "li",
        "gen",
        "dui",
        "center"
      ]
    },
    "facetId": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$"
    },
    "questionSet": {
      "type": "string",
      "enum": [
        "OCTET_8",
        "DECET_10"
      ],
      "default": "OCTET_8"
    },
    "scoringModel": {
      "type": "string",
      "enum": [
        "weighted_sum",
        "vector_state_v3"
      ],
      "default": "weighted_sum"
    },
    "sources": {
      "type": "object",
      "required": [
        "questions",
        "scoring",
        "recommendations",
        "narratives",
        "riskchains"
      ],
      "properties": {
        "questions": {
          "type": "string"
        },
        "scoring": {
          "type": "string"
        },
        "recommendations": {
          "type": "string"
        },
        "narratives": {
          "type": "string"
        },
        "riskchains": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}